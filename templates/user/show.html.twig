{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block main %}
	<div class="col-8">
		<div class="select">
			<span>
				<a href="{{ path('app_user_show', {id: user.id}) }}">Posts</a>
			</span>
			<span>
				<a href="{{ path('app_user_show', {id: user.id, about: ' '}) }}">About</a>
			</span>
		</div>
		</hr>
		{% if app.request.query.get('about') %}
			<h3>About</h3>
		{% else %}
			{% for post in posts %}
				{{ include('post/_post_card.html.twig') }}
			{% endfor %}
		{% endif %}
	</div>

	<div class="col-4">
		<div class="mb-5 user-profile-card">
			<img class="user-profile-img" src="https://placehold.co/800x600" alt="">
			<div>
				<div class="d-flex">
					<h1>{{ user.username }}</h1>
					 {{ include('user/_follow_button.html.twig') }}
				</div>
				<p>
					Member since
					{{ user.createdAt | date('d/m/Y') }}
				</p>
			</div>
		</div>
	</div>

	{% if app.user and app.user.id == user.id %}
		<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
		{{ include('user/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
