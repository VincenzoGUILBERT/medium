{% extends "base.html.twig" %}

{% block main %}
	<div class="col-11">
		<div class="tags-container">
			{% for tag in tags %}
				<div class="tag-card">
					<span class="tag-name">{{ tag.name }}</span>
					<span class="tag-post-count">{{ tag.postCount }} posts</span>
					<a href="{{ path('app_post_index', {'tag': tag.name}) }}"></a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
